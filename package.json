{
  "name": "monopoly",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && node init.js && lerna clean && yarn && lerna bootstrap",
    "build": "yarn build:client && yarn build:server",
    "build:client": "lerna run build --scope=client",
    "build:server": "lerna run build --scope=server",
    "dev:client": "lerna run dev  --scope=client",
    "dev:server": "lerna run dev --scope=server",
    "dev": "yarn build:client && yarn dev:server",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "preview": "lerna run preview",
    "start": "yarn build && lerna run preview --scope=server"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.1.1",
    "lerna": "^5.4.3"
  }
}